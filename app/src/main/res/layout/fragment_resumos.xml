<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResumosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="#ef2f4e">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/ImageP"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_anatomia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="@font/suez_one"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ImageP"
                android:text="Veja os Resumos detalhados"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_docs"
            android:rowCount="2"
            android:padding="10dp"
            android:columnCount="2"
            android:layout_weight="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDigestorio"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ef2f4e"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:src="@drawable/ic_estomago"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Sistema  Digestório "
                        android:gravity="center"
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardRespiratorio"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="#ef2f4e"
                    android:padding="20dp">

                    <ImageView
                        android:src="@drawable/ic_pulmaohumano"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:text="Sistema Respiratório"
                        android:layout_gravity="center"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardEsqueletico"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ef2f4e"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:src="@drawable/ic_esqueleto"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sistema  Esquelético"
                        android:layout_marginTop="20dp"
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardMuscular"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="#ef2f4e"
                    android:padding="10dp">

                    <ImageView
                        android:src="@drawable/ic_dor"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="   Sistema  Muscular   "
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardCardio"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ef2f4e"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:src="@drawable/ic_coracao"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sist. Cardiovascular "
                        android:layout_marginTop="20dp"
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardExcretor"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="12dp"
                android:textColor="@drawable/txt_botoes_resumos"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="#ef2f4e"
                    android:padding="10dp">

                    <ImageView
                        android:src="@drawable/ic_trato_urinario"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="    Sistema  Excretor    "
                        android:textColor="@drawable/txt_botoes_resumos"
                        android:fontFamily="@font/suez_one"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>

</ScrollView>